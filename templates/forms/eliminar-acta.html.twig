<form class="js-form" method="{{ form.method | default('DELETE') }}"
      action="{{site.uri.public}}/{{form.action}}">

    {% include "forms/csrf.html.twig" %}
    <div class="js-form-alerts"></div>
    <h4>
        {{ translate("UNLU.CERTIFICATE.DELETE.CONFIRM", { titulo: acta.titulo }) }}<br>
        <small>{{ translate("DELETE_CANNOT_UNDONE") }}</small>
    </h4>
    <br>
    <div class="btn-group-action">
        <button type="submit" class="btn btn-danger btn-lg btn-block">{{ form.submit_text }}</button>
        <button type="button" class="btn btn-default btn-lg btn-block" data-dismiss="modal">{{ translate("CANCEL") }}</button>
    </div>
</form>

